{
  "name": "airfair",
  "version": "0.0.1",
  "description": "A tool for getting a fair fare.",
  "main": "./server.js",
  "dependencies": {
    "async"                   : "0.2.x",
    "underscore"              : "*",
    "backbone"                : "*",
    "backbone.marionette"     : "*",
    "jquery"                  : "*",
    "glob"                    : "3.1.x",
    "grunt"                   : "0.4.1",
    "filed"                   : "0.0.x",
    "grunt-contrib-compass"   : ">=0.1.3",
    "grunt-contrib-compress"  : "0.4.x",
    "grunt-contrib-concat"    : "0.1.x",
    "grunt-contrib-copy"      : "0.4.x",
    "grunt-contrib-jshint"    : "0.1.x",
    "grunt-contrib-requirejs" : "0.4.x",
    "grunt-contrib-uglify"    : "0.1.x",
    "grunt-contrib-watch"     : "0.2.x",
    "grunt-exec"              : "0.4.x",
    "grunt-mocha"             : "0.4.x",
    "grunt-handlebars-requirejs" : "0.1.x",
    "handlebars"              : "1.0.10",
    "i18next"                 : "1.5.x",
    "moment"                  : "2.0.x",
    "nokomis"                 : "latest",
    "nokomis-plugins"         : "latest",
    "request"                 : "2.21.0",
    "compass"                 : "0.1.0",
    "sass"                    : "0.5.0",
    "node-phantom"            : "0.2.x"
  },
  "devDependencies": {
    "mocha": "*",
    "sinon": "*",
    "blanket": "*"
  },
  "engines": {
    "node": ">=0.10.0"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/kevinmarx/airfair"
  },
  "scripts": {
    "start" : "node server.js | node_modules/nokomis/node_modules/bunyan/bin/bunyan",
    "watch" : "nodemon --watch ./ server.js | node_modules/nokomis/node_modules/bunyan/bin/bunyan",
    "test": "mocha --recursive -R spec",
    "coverage": "mocha --recursive --require blanket -R html-cov > coverage.html && open ./coverage.html",
    "blanket": {
      "pattern": "src"
    }
  }
}
